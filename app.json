{
    "name": "cloud-run-demo-js",
    "env": {
        "DD_API_KEY": {
            "description": "Your Datadog's API KEY (see: https://docs.datadoghq.com/account_management/api-app-keys)",
            "required": true
        }
    },
    "options": {
        "allow-unauthenticated": true,
        "memory": "512Mi",
        "cpu": "1",
        "port": 80,
        "http2": false
    },
    "hooks": {
        "prebuild": {
            "commands": [
                "export NODE_OPTIONS=\"--require /app/node_modules/dd-trace\"",
                "export DD_SERVICE=\"datadog-demo-run-js\"",
                "export DD_ENV=\"datadog-demo\"",
                "export DD_VERSION=\"1\""
            ]
        }
    }
}